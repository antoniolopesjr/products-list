<header>
  <BsNavbar
    @type="dark"
    @backgroundColor="dark"
    @collapsed={{true}}
    @onCollapse={{fn (mut this.collapsed) true}}
    @onExpand={{fn (mut this.collapsed) false}} as |navbar|
  >
    <div class="container d-flex">
      <div class="navbar-header">
        <navbar.toggle />
        <LinkTo @route="index" class="navbar-brand">
          <img
            src="https://ticto.com.br/dist/assets/logo-branca.svg"
            alt="Ticto brand"
            class="navbar-brand logo-width ml-2"
          />
        </LinkTo>
      </div>
      <navbar.content>
        <navbar.nav as |nav|>
          <nav.item>
            <nav.linkTo @route="index">
              Home
            </nav.linkTo>
          </nav.item>
        </navbar.nav>
      </navbar.content>
    </div>
  </BsNavbar>
</header>